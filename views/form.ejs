<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LillyBelle Employees</title>
</head>
<body>
    <div class="container">
        <div class="options">
            <form action="/app.js" method="post">
                <h3>la date d'aujourd'hui : <%= data.formattedDate  %></h3>
                <label for="Employe">Choisisser le collaborateur : </label>
                <br>
                <select name="Employe" id="Employe" >    
                    <%data.EmployeesNames.forEach((name)=>{%>
                    <option value="<%= name  %>"><%= name %></option>  
                    <%})  %> 
                </select><br>

                <label for="presence">ta presence : </label>
                <br>
                <select name="presence" id="presence" >    
                    <%data.Presence.forEach((name)=>{%>
                    <option value="<%= name  %>"><%= name %></option>  
                    <%})  %> 
                </select><br>

                <label for="client">nom de client : </label>
                <br>
                <select name="client" id="client" >    
                    <%data.client.forEach((name)=>{%>
                    <option value="<%= name  %>"><%= name %></option>  
                    <%})  %> 
                </select><br>

                <label for="activity">ton activité actuelle : </label>
                <br>
                <select name="activity" id="activity" >    
                    <%data.activity.forEach((name)=>{%>
                    <option value="<%= name  %>"><%= name %></option>  
                    <%})  %> 
                </select><br>
    
                <label for="Opportunité">Opportunité : </label>
                <br>
                <select name="Opportunité" id="Opportunité">    
                    <%data.Opportunité.forEach((name)=>{%>
                    <option value="<%= name  %>"><%= name %></option>  
                    <%})  %> 
                </select><br>
                <div id="opportunity-input" class="hidden mb-3">
                    <label for="opportunityDetails"> Quelle Opportunité </label>
                    <input  type="text" id="opportunityDetails" name="opportunityDetails" class="form-control" placeholder="ecris plus de detail ici ..." >
                </div>

                <label for="Probleme">Problème rencontré : </label>
                <br>
                <select name="Probleme" id="Probleme" >    
                    <%data.ProblèmeRencontré.forEach((name)=>{%>
                    <option value="<%= name  %>"><%= name %></option>  
                    <%})  %> 
                </select><br>

                <label for="statut">statut de travail: </label>
                <br>
                <select name="statut" id="statut" >    
                    <%data.statut.forEach((name)=>{%>
                    <option value="<%= name  %>"><%= name %></option>  
                    <%})  %> 
                </select><br>

                <label for="Fournisseur"> Fournisseur : </label>
                <br>
                <select name="Fournisseur" id="Fournisseur" >    
                    <%data.Fournisseur.forEach((name)=>{%>
                    <option value="<%= name  %>"><%= name %></option>  
                    <%})  %> 
                </select>
                <br>
                <label for="PresenceEnJourne">Presence en journe (heure) : </label>
                <input type="number" name="PresenceEnJourne" min="0" max="12">
                <br>
                <label for="comment">ecris un commentaire :</label>
                <input id="comment" type="text" placeholder="ecris ton commentaire ici ...." name="comment" height="80px">

                <button type="submit">Submit</button>
            </form>
        </div>
        
    </div>

    <div class="data-table">
        <table>
            <tr>
                <th>Nom de l'employé</th>
                <th>Presence</th>
                <th>client</th>
                <th>Activité</th>
                <th>Problème Rencontré</th>
                <th>status</th>
                <th>Fournisseur</th>
                <th>la Date</th>
            </tr>
            <% employees.forEach(employee => { %>
                <tr>
                    <td><%= employee.EmployeesNames %></td>
                    <td><%= employee.Presence %></td>
                    <td><%= employee.client %></td>
                    <td><%= employee.activity %></td>
                    <td><%= employee.ProblèmeRencontré %></td>
                    <td><%= employee.statut %></td>
                    <td><%= employee.Fournisseur %></td>
                    <td><%= employee.formattedDate %></td>
                </tr>
                <% }) %>

        </table>


    </div>
    
    <script>
        document.getElementById('Opportunité').addEventListener('change', function() {
            const opportunityInput = document.getElementById('opportunity-input');
            const selectedOption = this.options[this.selectedIndex].text;
            if (selectedOption === "pas d'opportunités") {
                opportunityInput.classList.add('hidden');
            } else {
                opportunityInput.classList.remove('hidden');
            }
        });
    </script>
    
    
</body>
</html>